<Window x:Class="Shop.WPF.Views.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Details" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <ListView ItemsSource="{Binding OrderProducts}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding ProductName}" />
                        <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}" />
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
