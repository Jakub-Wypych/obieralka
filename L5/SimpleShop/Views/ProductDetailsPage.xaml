<Window x:Class="Shop.WPF.Views.ProductDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły produktu" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nazwa produktu:" />
            <TextBox Text="{Binding Product.Name}" />

            <TextBlock Text="Kategoria:" />
            <ComboBox ItemsSource="{Binding Categories}" 
                      SelectedItem="{Binding SelectedCategory}" 
                      DisplayMemberPath="Name" />

            <TextBlock Text="Ilość w magazynie:" />
            <TextBox Text="{Binding SelectedStockQuantity}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Zapisz" Command="{Binding EditProductCommand}" Margin="5,0"/>
                <Button Content="Cofnij" Command="{Binding GoBackCommand}" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
