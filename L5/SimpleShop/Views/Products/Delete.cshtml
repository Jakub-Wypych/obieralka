@model SimpleShop.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this product?</h4>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Category:</strong> @Model.Category.Name</p>
</div>

<form asp-action="Delete" method="post">
    <!-- Ukryty input do przekazania ID produktu do metody DeleteConfirmed -->
    <input type="hidden" name="id" value="@Model.Id" />

    <!-- Przycisk potwierdzający usunięcie -->
    <button type="submit" class="btn btn-danger">Yes, delete it</button>

    <!-- Przycisk anulujący, który przekierowuje do listy produktów -->
    <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Cancel</a>
</form>
