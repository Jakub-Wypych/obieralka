@model IEnumerable<SimpleShop.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Products", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Products", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Products")">Create New Product</a>
