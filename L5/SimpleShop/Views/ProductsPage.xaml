<Window x:Class="Shop.WPF.Views.ProductsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produkty" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Lista produktów" FontSize="16" Margin="0,0,0,10"/>

            <ListBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" DisplayMemberPath="Name" Height="200" />

            <Button Content="Usuń produkt" Command="{Binding DeleteProductCommand}" Margin="0,10"/>
            <Button Content="Szczegóły produktu" Command="{Binding NavigateToProductDetailsCommand}" Margin="0,10"/>

            <TextBlock Text="Dodaj nowy produkt" FontSize="16" Margin="0,20,0,10"/>

            <TextBox PlaceholderText="Nazwa produktu" Text="{Binding NewProductName}" />
            <TextBox PlaceholderText="Cena" Text="{Binding NewProductPrice}" />
            <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" />
            <TextBox PlaceholderText="Ilość w magazynie" Text="{Binding SelectedStockQuantity}" />

            <Button Content="Dodaj produkt" Command="{Binding AddProductCommand}" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
